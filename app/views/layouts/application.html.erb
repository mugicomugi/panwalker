<!DOCTYPE html>
<html>
  <head>
    <title>Panwalker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  
  <!--
  <script src="https://kit.fontawesome.com/xxxxxxxxxx.js" crossorigin="anonymous"></script>
  -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    
    <!--flash massage-->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <ul class="navbar-nav ml-auto">
            <li>
            <%= link_to "管理者ページ", new_admin_session_path, class: 'btn btn-outline-secondary' %>
            </li>
            <% if admin_signed_in? %>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-outline-secondary' %>
            <br>
            <% elsif user_signed_in? %>
            <div class="row">
            <br>
            <div class="col">
          <div class="collapse navbar-collapse" id="navbarNav">
           <ul class="navbar-nav">
            <li class="nav-item">
                <%= link_to '投稿フォーム', new_pan_image_path, class: 'btn btn-outline-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to 'マイページ', user_path(current_user.id), class: 'btn btn-outline-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to 'パン一覧', pan_images_path, class: 'btn btn-outline-dark' %>
              </li>
              <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-outline-dark' %>
              </li>
            </li>
            </ul>
            </div>
          <% else %>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: 'btn btn-outline-dark' %>
            </li>
          <% end %>
            </div>
            </div>
        </header>
    <%= yield %>
  </body>
</html>
