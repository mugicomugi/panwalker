<h1>PanImage#new</h1>
<p>Find me in app/views/pan_image/new.html.erb</p>
<%= form_with model: @pan_image do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  <!-- 追加部分 -->
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <%= f.submit '投稿' %>
  
<% end %>
